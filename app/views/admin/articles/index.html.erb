<p id="notice"><%= notice %></p>

<%= render 'admin/title', title: @category.name, link_text: '+ Add article', link_path: new_admin_article_path %>
<%= render 'layouts/categories_list' %>

<div class="articles-container">
  <div class="row">
    <% @articles.each do |article| %>

      <div class="col-md-12 admin-article">

        <!--    TODO: real image-->
        <img src="<%= image_url 'example.jpg' %>" class="admin-article-image" alt="sport">

        <div class="card-body">

          <h5 class="card-title admin-article-title">
            <div>
              <%= link_to link_to article.title, admin_article_path(article) %>
            </div>

            <div class="dropdown-toggle-article"
                 data-toggle="dropdown"
                 data-display="static"
                 aria-haspopup="true"
                 aria-expanded="false"
                 data-reference="parent">
          <span>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-three-dots" viewBox="0 0 16 16">
              <path d="M3 9.5a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3zm5 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3zm5 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3z"/>
            </svg>
          </span>
            </div>
            <div class="dropdown-menu dropdown-menu-right">
              <%= link_to 'Destroy', admin_article_path(article), class: 'dropdown-item', method: :delete, data: { confirm: 'Are you sure?' } %>
              <%= link_to 'Edit', edit_admin_article_path(article), class: 'dropdown-item' %>
            </div>
          </h5>

          <p class="card-text"><%= article.body[0..200] %></p>
        </div>
      </div>
    <% end %>
  </div>

</div>
