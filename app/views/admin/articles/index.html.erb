<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.body %></td>
        <td><%= article.category.name %></td>
        <td><%= link_to 'Show', admin_article_path(article), class: 'btn btn-primary btn-sm' %></td>
        <td><%= link_to 'Edit', edit_admin_article_path(article), class: 'btn btn-info btn-sm' %></td>
        <td><%= link_to 'Destroy', admin_article_path(article), class: 'btn btn-danger btn-sm', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_admin_article_path, class: 'btn btn-primary' %>
