<%= render 'admin/pages/add-modal' %>
<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-3">
    <h1>
      Footer
    </h1>
  </div>
  <div class="col-md-6"></div>
  <div class="col-md-3">
    <div>
      <button class="btn btn-primary" data-toggle="modal" data-target="#addFooter" id="addFooterButton">
        + Add footer page
      </button>
    </div>
  </div>
</div>

<ul class="nav nav-tabs" id="footers" role="tablist">
  <li class="nav-item">
    <a class="nav-link active"
       href="#company_info"
       id="company_info-tab"
       data-toggle="tab"
       role="tab"
       aria-controls="company_info"
       aria-selected="true">
      Company info
    </a>
  </li>
  <li class="nav-item">
    <a class="nav-link"
       href="#contributors"
       id="contributors-tab"
       data-toggle="tab"
       role="tab"
       aria-controls="contributors"
       aria-selected="false">
      Contributors
    </a>
  </li>
</ul>
<div class="tab-content" id="footersContent">
  <div class="tab-pane fade show active" id="company_info" role="tabpanel" aria-labelledby="company_info-tab">
    <%= render 'admin/pages/list', category: Page::CATEGORY_COMPANY_INFO %>
  </div>
  <div class="tab-pane fade" id="contributors" role="tabpanel" aria-labelledby="contributors-tab">
    <%= render 'admin/pages/list', category: Page::CATEGORY_CONTRIBUTORS %>
  </div>
</div>

