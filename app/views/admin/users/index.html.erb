<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="table">
  <thead>
    <tr>
      <th>Email</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= link_to 'Show', admin_user_path(user), class: 'btn btn-primary btn-sm' %></td>
        <td><%= link_to 'Edit', edit_admin_user_path(user), class: 'btn btn-info btn-sm' %></td>
        <td><%= link_to 'Destroy', admin_user_path(user), class: 'btn btn-danger btn-sm', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_admin_user_path, class: 'btn btn-primary' %>
